<h1> Episode's show page </h1>

<h3> Episode Date </h3>
<%= @episode.date %>

<h3> A list of guests</h3>
<ul>
    <% @episode.guests.each do |guest| %>
    <li>
        Guest: <%= link_to guest.name, guest_path(guest) %> | Rating: <%= Appearance.find_rating(guest, @episode)%>
    </li>
    <% end %>
</ul>

<h3> Average rating of appearances </h3>
<%= @episode.average_rating %>
<%= %>
