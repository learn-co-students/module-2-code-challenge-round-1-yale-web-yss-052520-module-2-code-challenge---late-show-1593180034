<%= link_to "<<Back to main", root_path %>

<h1>All The Guests</h1>

<table>
  <tr>
    <th>Name</th>
    <th># of Episodes</th>
  </tr>
  <% @guests.each do |guest| %>
    <tr>
      <td><%= link_to guest.name, guest_path(guest) %></td>
      <td><%= guest.episodes.count %>
    </tr>
  <% end %>
</table>
